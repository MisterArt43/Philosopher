SRC		=	src/check.c \
src/exec.c \
src/main.c \
src/parsing.c \
src/utils.c \
src/exec_utils.c

HEADER = includes/header.h

NAME	=	philo

CC		=	gcc
FLAGS	= 	-Wall -Werror -Wextra -g3 #-fsanitize=thread
OBJ = $(SRC:.c=.o)

all : $(NAME)

$(NAME) : $(OBJ) $(HEADER)
	@$(CC) -o $(NAME) $(OBJ) $(FLAGS)
	@echo "⡏⠉⠉⠉⠉⠉⠉⠋⠉⠉⠉⠉⠉⠉⠋⠉⠉⠉⠉⠉⠉⠉⠉⠉⠉⠙⠉⠉⠉⠹"
